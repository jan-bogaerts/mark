{
  "name": "mark",
  "version": "0.1.1",
  "private": true,
  "author": "Jan Bogaerts",
  "description": "An ideation and code generation tool that uses markdown syntax and transformers to generate code.",
  "homepage": "./",
  "main": "./public/electron.js",
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@electron/remote": "^2.0.11",
    "@geoffcox/react-splitter": "^2.1.2",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "antd": "^5.9.1",
    "async-es": "^3.2.4",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "js-tiktoken": "^1.0.7",
    "monaco-editor": "^0.43.0",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "openai": "^4.7.1",
    "re-resizable": "^6.9.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0",
    "react-monaco-editor": "^0.54.0",
    "react-scripts": "5.0.1",
    "uuid": "^9.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject",
    "electron:start": "concurrently -k \"cross-env BROWSER=none npm run start\" \"electronmon .\"",
    "electron:package:mac": "yarn build && electron-builder -m -c.extraMetadata.main=build/electron.js",
    "electron:package:win": "yarn build && electron-builder -w -c.extraMetadata.main=build/electron.js",
    "electron:package:linux": "yarn build && electron-builder -l -c.extraMetadata.main=build/electron.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "electronmon": "^2.0.2",
    "react-app-rewired": "^2.2.1",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.elastetic.mark",
    "productName": "Mark",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "extraResources": [
      "./resources/**"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    }
  }
}
